@model IEnumerable<Customer>
@{
    ViewBag.Title = "UpcomingServices";
}

<script>
    var customers = @Html.Raw(Json.Encode(Model));
</script>

<div class="container-fluid" ng-controller="upcomingServicesCtrl">
    <div class="page-header">
        <h2>Upcoming Services</h2>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Last Service</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="customer in customers | orderBy: 'LastService'">
                    <td>{{customer.CustomerID}}</td>
                    <td>{{customer.Name}}</td>
                    <td>{{customer.LastService | date: 'shortDate'}}</td>
                    <td>{{customer.CellPhoneNum | phone}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

