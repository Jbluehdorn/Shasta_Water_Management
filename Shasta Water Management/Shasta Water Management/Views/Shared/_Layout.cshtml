<!DOCTYPE html>
<html ng-app="shasta-water">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Shasta Water Co.</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <a id="header-link" href='@Url.Action("Index", "Home")'>
            <img src='@Url.Content("~/Content/images/ShastaLogo.png")' />
            <h1>Shasta Water Company</h1>
        </a>
    </header>
    <div class="main">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
